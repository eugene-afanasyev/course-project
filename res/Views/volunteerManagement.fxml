             <TableColumn fx:id="nameColumn" prefWidth="132.0" text="Имя" />
               <TableColumn fx:id="sexColumn" prefWidth="108.0" text="Пол" />
               <TableColumn fx:id="regionColumn" prefWidth="195.0" text="Регион" />
               <TableColumn fx:id="competenceColumn" prefWidth="265.0" text="Компетенция" />
           </columns>
         </TableView>
         <Label fx:id="loadingLabel" layoutX="375.0" layoutY="211.0" prefHeight="27.0" prefWidth="101.0" text="Загрузка">
            <font>
               <Font size="20.0" />
            </font>
         </Label>
         <ProgressIndicator fx:id="spinner" layoutX="476.0" layoutY="202.0" progress="0.0" />
        </children>
    </AnchorPane>
