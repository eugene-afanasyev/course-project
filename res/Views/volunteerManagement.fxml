<VBox fx:id="mainView" prefHeight="640.0" prefWidth="920.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.VolunteerManagementController">
    <fx:include source="signedUserHeader.fxml" />
    <AnchorPane prefHeight="584.0" prefWidth="920.0">
        <children>
            <Label layoutX="252.0" layoutY="25.0" prefHeight="57.0" prefWidth="416.0" text="Управление волонтерами">
                <font>
                    <Font name="SansSerif Regular" size="30.0" />
                </font>
            </Label>
         <Button layoutX="551.0" layoutY="116.0" mnemonicParsing="false" onMouseClicked="#ToVolunteerLoadingPage" prefHeight="27.0" prefWidth="235.0" text="Загрузка волонтеров">
            <font>
               <Font name="SansSerif Regular" size="15.0" />
            </font>
